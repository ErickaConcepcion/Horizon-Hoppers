<div class="w-full h-fit md:w-3/4 px-8 md:px-0 mx-auto py-8">
  <div class="w-full h-fit mb-8">
    <% const data = {tagTitle: 'POPULAR DESTINATION', tagColor: 'text-emerald-700', dashColor: 'bg-emerald-700'} %>
    <%- include('../components/molecules/section-tag-molecule.ejs', {data}) %>
    <div class="md:flex justify-between items-center">
      <div class="mb-4">
        <h2 class="text-5xl font-bold uppercase text-emerald-950">Top Notch Destination</h2>
      </div>
      <div>
          <p class="text-gray-800 font-medium">Where Dreams Take Flight: A Premier Destination for the Ultimate Adventure and Unforgettable Memories.</p>
      </div>
    </div>
  </div>

  <div class="">
    <div class="grid md:grid-cols-2 gap-2">
      <% places.forEach((place) => {%>
        <% if (place.popular) { %>
          <%- include('../components/molecules/destination-card.ejs', {place}) 
          %>
        <% } %>
      <% }) %>
    </div>
  </div>

  <div class="text-center mt-12 mb-6">
    <%- include('../components/atoms/cta-book-now.ejs', {content: "More Destination", redirect: "#", style: "shadow-inner shadow-emerald-900 text-white font-medium md:font-bold px-6 py-4 rounded-md bg-emerald-700 mt-4 uppercase"})%>
  </div>
  
</div>
