<section>
  <div class="w-full md:w-4/5 lg:w-3/5 mx-auto px-10 md:px-6 lg:px-4 py-6">
    <div class="flex items-start justify-between border-b-2 border-gray-200 mb-2">
      <div>
        <h1 class="text-lg sm:text-2xl md:text-4xl uppercase font-bold"><%= tour.tourCardTitle %></h1>
        <div class="flex my-4 gap-2">
          <%- include('../components/atoms/ratingstars', {  ratingOutOfFive : place.ratingOutOfFive}); %>
          <p class="text-sm font-opensans text-gray-600 p-1">(<%= place.numberOfReviews ;%> reviews)</p>
        </div>
      </div>
      <div class="flex flex-col items-start justify-start">
        <h3 class="font-bold text-emerald-700 text-2xl">$<%= place.pricePerPerson %></h3>
        <p class="text-sm text-gray-500 ">per person</p>
      </div>
    </div>
    <div class="flex gap-4 justify-start items-center mb-2">
      <div class="py-2 pr-4 flex gap-2 items-center ">
        <i class="fa fa-clock text-emerald-700" aria-hidden="true"></i>
        <span class="text-gray-600"><%= place.dayNightFormat %></span>
      </div>
      <div class="py-4 px-4 flex gap-2 items-center">
        <i class="fa fa-user text-emerald-700" aria-hidden="true"></i>
        <span class="text-gray-600"><%= place.numberOfPeople %></span>
      </div>
    
      <div class="py-4 px-4 flex gap-2 items-center">
        <i class="fa fa-map text-emerald-700" aria-hidden="true"></i>
        <span class="text-gray-600 font-bold "><%= place.country %></span>
      </div>

    </div>
    <%- include('../components/molecules/tour-carousel.ejs', { images: tour.details.images}) %>
    <div class="tour-details-overview flex flex-col gap-4 mt-4">
      <h1 class="font-bold text-2xl md:text-3xl ">Overview</h1>
      <p class="tour-details-description text-gray-500 text-base md:text-lg">
        <%= tour.details.overview %>
      </p>
    </div>
  </div>
</section>